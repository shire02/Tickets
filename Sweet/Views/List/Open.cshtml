@model Sweet.Models.CTickets

@{
    ViewBag.Title = "Open";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Open</h2>

<div class="form-group">
   @*@if(Model.Status= 0)*@

    @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-md-2" })
